<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mike.dagger2.ui.feature1.FeatureOneMainScreen">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature1 Main Screen"
        android:paddingBottom="100dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/producerText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="200dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="blah blah blah"/>

    <Button
        android:id="@+id/secondary_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Secondary Screen"
        app:layout_constraintTop_toBottomOf="@id/producerText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/feature_2_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Feature 2"
        app:layout_constraintTop_toBottomOf="@id/secondary_screen_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
